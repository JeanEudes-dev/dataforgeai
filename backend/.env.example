# DataForge AI Backend Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Set to False in production
DEBUG=True

# Generate a secure key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-dev-key-change-in-production

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (for development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (for production)
# DATABASE_URL=postgres://user:password@localhost:5432/dataforgeai

# =============================================================================
# FILE STORAGE
# =============================================================================

# Path to store uploaded files (leave empty for default: ./media)
MEDIA_ROOT=

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=50

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# Access token lifetime in minutes
ACCESS_TOKEN_LIFETIME_MINUTES=60

# Refresh token lifetime in days
REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# AI FEATURES (OPTIONAL)
# =============================================================================

# Google Gemini API key for AI-powered insights
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# =============================================================================
# ML SETTINGS
# =============================================================================

# Maximum rows for full EDA (larger datasets will be sampled)
MAX_ROWS_FULL_EDA=50000

# Sample size for large datasets
EDA_SAMPLE_SIZE=10000
